    top: -10rem;
    left: 5vw
  }

  .shadow1 {
    box-shadow: 3px 2px 2px -5px rgba(40, 40, 40, .2), 3px 4px 4px -5px rgba(40, 40, 40, .2), 3px 8px 8px -5px rgba(40, 40, 40, .2), 3px 16px 16px -5px rgba(40, 40, 40, .2), 3px 32px 32px -5px rgba(40, 40, 40, .2), 3px 64px 64px -5px rgba(40, 40, 40, .2)
