  }

  .black {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .3);
    z-index: 1
  }

  .pageAbout {
    max-width: 490px;
    width: 100%;
    background: #fff;
