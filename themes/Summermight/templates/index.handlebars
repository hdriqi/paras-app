    .headerText {
      width: 90%
    }

    .wrapper {
      overflow: hidden
    }

    .headerText1 {
      letter-spacing: -5px;
      line-height: 4rem;
    }

    .pageAbout {
      left: 0
    }
  }

  @media screen and (max-width:450px) {
    .headerText {
      width: 90%
    }

    .flower1 {
      transform: scale(1.2)
    }

    .headerText1 {
      letter-spacing: -5px
    }

    .pageAbout {
      left: 0
    }
  }
